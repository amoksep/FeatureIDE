<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.ovgu.featureide.core.composers">
      <composer
            class="de.ovgu.featureide.core.cide.CIDEComposer"
            description="A purposely-simple preprocessor for Java files."
            id="de.ovgu.featureide.preprocessor.cide"
            name="CIDE"
            nature="FeatureIDE_Core.cideNature">
      </composer>
   </extension>

   <extension
         point="de.ovgu.featureide.core.wizard">
      <newProjectWizard
            class="de.ovgu.featureide.core.wizardextension.DefaultNewFeatureProjectWizardExtension"
            composerid="de.ovgu.featureide.preprocessor.cide"
            id="de.ovgu.featureide.core.munge.newProjectWizard"
            name="de.ovgu.featureide.core.cide">
      </newProjectWizard>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
   <objectContribution
            objectClass="org.eclipse.ui.IEditorInput"
            nameFilter="*.*"
            id="SimplePopupMenu.contribution1">

         <action
               class="de.ovgu.featureide.cide.actions.MarkWithFeatureAction"
               id="de.ovgu.featureide.core.cide.markwithfeatureaction"
               label="Mark with feature ..."
               menubarPath="de.ovgu.featureide.ui.MarkWithFeatureMenu/ui"
               style="push">
         </action>
         <action
               class="de.ovgu.featureide.cide.actions.UnmarkFeatureAction"
               id="de.ovgu.featureide.core.cide.unmarkfeatureaction"
               label="Unmark feature ..."
               menubarPath="de.ovgu.featureide.ui.MarkWithFeatureMenu/ui"
               style="push">
         </action>
         <menu
               id="de.ovgu.featureide.ui.MarkWithFeatureMenu"
               label="Mark / Unmark"
               path="additions">
         </menu>
         <action
               class="de.ovgu.featureide.cide.actions.ClearFeatureAction"
               id="de.ovgu.featureide.core.cide.clearfeature"
               label="Clear feature ..."
               menubarPath="de.ovgu.featureide.ui.MarkWithFeatureMenu/ui"
               style="push">
         </action>
         <action
               class="de.ovgu.featureide.cide.actions.ClearAllFeaturesAction"
               id="de.ovgu.featureide.core.cide.clearallfeatures"
               label="Clear all features"
               menubarPath="de.ovgu.featureide.ui.MarkWithFeatureMenu/ui"
               style="push">
         </action>
         <action
               class="de.ovgu.featureide.cide.actions.ShowASTAction"
               id="de.ovgu.featureide.core.cide.schowast"
               label="Show AST"
               menubarPath="de.ovgu.featureide.ui.MarkWithFeatureMenu/ui"
               style="push">
         </action>
         <action
               class="de.ovgu.featureide.cide.actions.HideUnmarkedCodeAction"
               id="de.ovgu.featureide.core.cide.hideunmarkedcode"
               label="Hide unmarked code"
               menubarPath="de.ovgu.featureide.ui.MarkWithFeatureMenu/ui"
               style="push">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="de.ovgu.featureide.core.cide.IFileContribution"
            objectClass="org.eclipse.core.resources.IFile">
         <action
               class="de.ovgu.featureide.cide.actions.SetFileColorAction"
               id="de.ovgu.featureide.core.cide.setResourceColor"
               label="Set File Color"
               menubarPath="de.ovgu.featureide.core.cide.featureide">
         </action>
         <menu
               id="de.ovgu.featureide.core.cide.featureide"
               label="Feature IDE"
               path="group.open">
         </menu>
         <action
               class="de.ovgu.featureide.cide.actions.RemoveFileColorAction"
               id="de.ovgu.featureide.core.cide.removeResourceColor"
               label="Remove File Color"
               menubarPath="de.ovgu.featureide.core.cide.featureide">
         </action>
      </objectContribution>
      
      <objectContribution
            adaptable="true"
            id="de.ovgu.featureide.core.cide.IFolderContribution"
            objectClass="org.eclipse.core.resources.IFolder">
         <action
               class="de.ovgu.featureide.cide.actions.SetFolderColorAction"
               id="de.ovgu.featureide.core.cide.setFolderColor"
               label="Set Folder Color"
               menubarPath="group.open">
         </action>
         <action
               class="de.ovgu.featureide.cide.actions.RemoveFolderColorAction"
               id="de.ovgu.featureide.core.cide.removeFolderColor"
               label="Remove Folder Color"
               menubarPath="group.open">
         </action>
         <action
               class="de.ovgu.featureide.cide.actions.RemoveFeatureColorFromFolderAction"
               id="de.ovgu.featureide.core.cide.RemoveFeatureColor"
               label="Remove Feature Color"
               menubarPath="group.open">
         </action>
      </objectContribution>
   </extension>

</plugin>
